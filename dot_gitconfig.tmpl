[user]
	name = {{ .name }}
	email = {{ .email }}
[merge]
	tool = {{ .mergetool }}
	conflictstyle = diff3
[diff]
	tool = {{ .mergetool }}
[color]
	ui = true
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[alias]
	fpush = push --force-with-lease
	mpull = pull --no-rebase
[pull]
	rebase = true
[init]
	defaultBranch = main
[help]
	autocorrect = 20
[mergetool]
	keepBackup = false
	prompt = false
[fetch]
	prune = true
[core]
	excludesfile = {{ .chezmoi.homeDir }}/.config/git/ignore
