[Unit]
Description=Service to save tmux windows on user logout
Documentation=man:tmux(1)

[Service]
Type=oneshot
RemainAfterExit=yes
Environment=DISPLAY=:0

ExecStop={{ .chezmoi.homeDir }}/.tmux/plugins/tmux-resurrect/scripts/save.sh quiet
KillMode=control-group
RestartSec=2

[Install]
WantedBy=default.target
